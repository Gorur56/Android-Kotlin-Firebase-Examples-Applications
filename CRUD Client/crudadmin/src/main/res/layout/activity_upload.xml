<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/uploadbkg"
    tools:context=".UploadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="280dp"
        android:layout_gravity="center_horizontal"
        android:padding="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/edittextUploadName"
            android:background="@drawable/lavender_border"
            android:layout_marginTop="20dp"
            android:hint="Enter name"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:padding="16dp"
            android:gravity="start|center_vertical"
            android:textColor="@color/lavender"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/edittextUploadOperator"
            android:background="@drawable/lavender_border"
            android:layout_marginTop="20dp"
            android:hint="Enter Operator"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:padding="16dp"
            android:gravity="start|center_vertical"
            android:textColor="@color/lavender"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/edittextUploadLocation"
            android:background="@drawable/lavender_border"
            android:layout_marginTop="20dp"
            android:hint="Enter Location"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:padding="16dp"
            android:gravity="start|center_vertical"
            android:textColor="@color/lavender"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/edittextUploadPhone"
            android:background="@drawable/lavender_border"
            android:layout_marginTop="20dp"
            android:hint="Enter Phone Number"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:padding="16dp"
            android:gravity="start|center_vertical"
            android:textColor="@color/lavender"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/buttonSave"
        android:textSize="18sp"
        android:text="Save"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cornerreadius="20dp"/>
    </LinearLayout>
</LinearLayout>